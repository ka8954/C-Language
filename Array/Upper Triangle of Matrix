#include <stdio.h>
int main()
{
   int a[100][100];
   int i,j,n,sum=0;
   scanf("%d",&n);
   printf("\n");
   
   for(i=0;i<n;i++)
   {
       for(j=0;j<n;j++)
       {
          scanf("%d",&a[i][j]);
       }
   }
   printf("\n");
   for(i=0;i<n;i++)
   {
       for(j=0;j<n;j++)
       {
           if(i<j)
           printf("%4d",0);
           else
           printf("%4d",a[i][j]);
       }
       printf("\n");
   }
  return 0;
}
